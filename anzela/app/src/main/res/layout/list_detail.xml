<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListDetailActivity"
    android:orientation="vertical"
    android:background="@color/black_two"
    >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/leftArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_left_arrow_white"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"/>

            <TextView
                android:id="@+id/deleteBtn"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="글삭제"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:textColor="@color/aqua_marine"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/rectangle_textwtire"
                />

        </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/detailList_scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_weight="1"

                >

                <LinearLayout
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="48dp">

            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/detailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="같이 쿠팡이츠 배달하실 분"
                    android:textStyle="bold"/>
            </LinearLayout>


        <RelativeLayout

            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/profile"
                android:background="@drawable/circle_profile"
                />

            <TextView
                android:id="@+id/userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/userProfile"
                android:text="강북멋쟁이"
                android:textColor="@color/brown_grey"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/regDate"
                android:textColor="@color/brown_grey"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021. 01. 31작성"
                android:textSize="12dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_alignParentBottom="true"
                />

            </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black">

                        <TextView
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="라이딩 예정일"
                            android:textColor="@color/brown_grey"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/startDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="61dp"
                            android:layout_marginEnd="16dp"
                            android:text="2020년 2월 3일 토요일 오후 4시"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black">

                        <TextView
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="모집인원"
                            android:textColor="@color/brown_grey"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/cruCnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="제한없음"
                            android:textColor="@color/white"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="16dp"
                            android:textSize="14dp"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black">

                        <TextView
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="출발지"
                            android:textColor="@color/brown_grey"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/startPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="서울시 강남구 테헤란로 12길"
                            android:textColor="@color/white"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="16dp"
                            android:textSize="14dp"
                            />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black">

                        <TextView
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="도착지"
                            android:textColor="@color/brown_grey"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/endPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="서울시 금천구 디지털로 12212길"
                            android:textColor="@color/white"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="16dp"
                            android:textSize="14dp"
                            />

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="4dp"
                        >

                       <fragment
                           android:layout_width="match_parent"
                           android:layout_height="140dp"
                           android:id="@+id/googleMap"
                           android:name="com.google.android.gms.maps.SupportMapFragment"/>

                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_marginTop="24dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/rectangle_layout">

                        <TextView
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="상세내용"
                            android:textSize="14dp"
                            android:textColor="@color/very_light_pink"
                            />

                        <TextView
                            android:id="@+id/content"
                            android:padding="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="@color/white"
                            android:text="요즘 쿠팡이츠 배달에 빠져서 하고있어요\n취미가 비슷한 20대 30대 분들 같이 돈벌면서
                                          놀아요 신청해주시고 댓글 남겨주세요"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="36dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/cmtCnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="댓글 0개"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="20dp"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/renctangle_black">

                        <EditText
                            android:id="@+id/comment_editText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_toStartOf="@+id/message"
                            android:background="@null"
                            android:hint="댓글을 입력하세요"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:padding="16dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/very_light_pink"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/message"
                            android:layout_marginEnd="4dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_comment_mint"
                            android:background="@drawable/circle_black"/>
                   </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/addComments"
                        android:layout_marginBottom="48dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@color/black"
                        android:visibility="gone"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:text="첫번째 댓글의 주인공이 되어보세요!"
                            android:textColor="@color/white"
                            />


                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/commentsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="48dp"
                        />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rightBtn"
                android:layout_weight="6"
                android:background="@color/very_light_pink"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="수정하기"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/leftBtn"
                android:layout_weight="4"
                android:background="@color/aqua_marine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="신청현황 바로보기"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                />

        </LinearLayout>



</LinearLayout>