<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cmProfile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/circle_profile"/>

            <TextView
                android:id="@+id/cmUid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/cmProfile"
                android:text="천왕동불주먹"
                android:textSize="12dp"
                android:textColor="@color/very_light_pink"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/cmRegDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/very_light_pink"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:textSize="12dp"
                android:text="2021. 01. 31"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/cmContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="엇!! 저도 목감천 자주 타러갑니다 ㅋㅋㅋ 신청할게요~"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </RelativeLayout>



    </LinearLayout>

</LinearLayout>