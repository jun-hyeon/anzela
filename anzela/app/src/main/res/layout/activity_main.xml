<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:openDrawer="end"
    android:background="@color/black_two"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/menu"
                android:layout_marginStart="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="393dp"
                android:paddingVertical="24dp"
                android:src="@drawable/ic_menu" />

            <ImageView
                android:id="@+id/notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="77dp"
                android:paddingVertical="20dp"
                android:src="@drawable/ic_noti" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/profile"
                android:background="@drawable/circle_profile"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/textdo"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_below="@id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="do님, 오늘도\n달려볼까요?"
            android:textSize="24dp"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:id="@+id/weatherLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textdo"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rectangle_layout">

            <TextView
                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="오늘 날씨"
                android:textColor="@color/brown_grey"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/today"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/ic_weather_sun" />

            <TextView
                android:id="@+id/weatherTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/weatherIcon"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/weatherIcon"
                android:text="24°"
                android:textSize="14dp"
                android:textColor="@color/aqua_marine" />

            <TextView
                android:id="@+id/weatherCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/weatherTemp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/weatherTemp"
                android:text="맑음"
                android:textColor="@color/aqua_marine"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/weatherCondition"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="0dp"
                android:text="라이딩하기 좋은 날이네요"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ridingSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/weatherLayout"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">

        <TextView
            android:id="@+id/ridingScheduleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다가오는 라이딩 일정"
            android:layout_marginBottom="8dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/timelineRiding"
            android:layout_below="@id/ridingScheduleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_below="@id/ridingScheduleTitle"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                >
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rentangle_list">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="66dp"
                        android:background="@drawable/aquamarine_background"
                        />

                    <TextView
                        android:id="@+id/cominglistTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="12dp"

                        android:text="목감천 라이딩해요"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/cominglistCount"
                        android:layout_marginStart="16dp"
                        android:layout_below="@id/cominglistTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/very_light_pink"
                        android:text="최대 4명"/>

                    <View
                        android:id="@+id/cominglistView"
                        android:layout_width="1dp"
                        android:layout_height="14dp"
                        android:layout_below="@id/cominglistTitle"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/cominglistCount"
                        android:background="@color/very_light_pink" />

                    <TextView
                        android:id="@+id/comingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cominglistTitle"
                        android:layout_marginStart="7dp"
                        android:layout_marginBottom="-3dp"
                        android:layout_toEndOf="@+id/cominglistView"
                        android:text="예정일"
                        android:textColor="@color/very_light_pink"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/comingDateText"
                        android:layout_below="@id/cominglistTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_toEndOf="@+id/comingDate"
                        android:text="2021. 01. 31"
                        android:textColor="@color/very_light_pink"
                        android:textSize="14dp" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nearRiding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ridingSchedule"
            android:layout_marginTop="44dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">

            <TextView
                android:id="@+id/aroundRidingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="내 근처 라이딩 모임"
                android:layout_marginBottom="8dp"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_alignTop="@id/aroundRidingTitle"
                android:layout_alignBottom="@id/aroundRidingTitle"
                android:layout_toStartOf="@id/locationText"
                android:src="@drawable/ic_marker" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:text="설정 안됨"
                android:layout_marginBottom="8dp"
                android:textColor="@color/brown_grey"
                android:textSize="14dp" />

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/aroundRiding"
                android:layout_below="@id/aroundRidingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
            <LinearLayout
                android:layout_below="@id/aroundRidingTitle"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                >


            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@id/nearRiding"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"

                android:layout_toStartOf="@id/rightArrow"
                android:text="더 많은 글 보러가기"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/rightArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_right_arrow_white"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="8dp"
                android:paddingVertical="11dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/circle"
                />

        </RelativeLayout>




    </RelativeLayout>
    </ScrollView>



    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        android:layout_gravity="start"
        app:itemTextColor="@color/white"
        android:background="@color/black_three">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            >

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_white"
            android:layout_marginTop="42dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_logo"
            android:layout_marginTop="38dp"
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greyish_brown"
                android:layout_marginTop="30dp"/>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/allLinear"
                android:clickable="true"
                android:background="@drawable/ripple_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:paddingVertical="17dp">

                    <TextView
                        android:id="@+id/all"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체 모임"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/aroundLinear"
                android:clickable="true"
                android:background="@drawable/ripple_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingVertical="17dp"
                >

                <TextView
                    android:id="@+id/around"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 근처 모임"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:textColor="@color/white"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/timeLineLinear"
                android:clickable="true"
                android:background="@drawable/ripple_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingVertical="17dp"
                >

                <TextView
                    android:id="@+id/timeLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일정이 가까운 모임"
                    android:layout_marginStart="8dp"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greyish_brown"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"/>

            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingVertical="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 정보"
                    android:layout_marginStart="8dp"
                    android:textSize="16dp"
                    android:textColor="@color/very_light_pink"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingVertical="8dp">
                <TextView
                    android:id="@+id/kick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="킥보드 정보"
                    android:layout_marginStart="8dp"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:textColor="@color/very_light_pink"/>

                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_centerVertical="true"
                    android:text="어떤 킥보드 타세요?"
                    android:textColor="@color/aqua_marine"
                    android:textSize="12dp"
                    android:background="@drawable/rectangle_aquamarine"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingVertical="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 신청목록"
                    android:layout_marginStart="8dp"
                    android:textSize="16dp"
                    android:textColor="@color/very_light_pink"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingVertical="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내가 쓴 글"
                    android:layout_marginStart="8dp"
                    android:textSize="16dp"
                    android:textColor="@color/very_light_pink"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:text="ver 1.0.0"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

            </RelativeLayout>

     </LinearLayout>

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>